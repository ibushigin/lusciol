<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <title>{% block title %}Welcome!{% endblock %}</title>

    {% block stylesheets %}
        {# FAVICON #}
        <link rel="icon" href="{{ asset("img/favicon.ico") }}">
        {# Typographies GOOGLE FONT#}
        <link href="https://fonts.googleapis.com/css?family=Chivo" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Roboto:400,700" rel="stylesheet">
        {#Le css bootstrap#}
        <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.min.css') }}">
        {#Fontawesome#}
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
        {#Leaflet OSM#}
        <link rel="stylesheet" href="https://unpkg.com/leaflet@1.4.0/dist/leaflet.css"
              integrity="sha512-puBpdR0798OZvTTbP4A8Ix/l+A4dHDD0DGqYW6RQ+9jxkRFclaxxQb/SJAWZfWAkuyeQUytO7+7N4QKrDh+drA=="
              crossorigin=""/>
        {#CSS custom #}
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    {% endblock %}

</head>

<body>

<div class="container-fluid">
    <div class="row">
        <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top" id="navbarHompage">
            <a class="navbar-brand" href="{{ path('home') }}"><img src="{{ asset('img/logo.png') }}" alt="LusciolLogo"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#HomenavbarContent" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span><i class="fas fa-bars fa-2x" id="burgerHome"></i></span>
            </button>
            <div class="collapse navbar-collapse" id="HomenavbarContent">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link allNavItems mx-4" href="{{ path('viewAll') }}">Map</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link allNavItems mx-4" href="{{ path('concept') }}">Concept</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link allNavItems mx-4" href="{{ path('addAddress') }}">Proposer un bon plan</a>
                    </li>
                    {# cr√©e un lien vers la page admin si on a le role admin #}
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item">
                            <a class="nav-link allNavItems mx-4" href="{{ path('admin') }}">Admin</a>
                        </li>
                    {% endif %}

                    {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                        {# Picto connexion#}
                        <div class="connectHome">
                            <a href="{{ path('app_login') }}"><i class="fas fa-user"></i></a>
                        </div>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link allNavItems mx-4" href="{{ path('logout') }}">Logout</a>
                        </li>
                        {# Picto connexion#}
                        <div class="connectHome">
                            <a href="{{ path('userInfo') }}"><i class="fas fa-user"></i></a>
                        </div>
                    {% endif %}
                    {#<li class="nav-item" id="connect">#}
                    {#<a href="{{ path('app_login') }}"><i class="fas fa-user pl-3"></i></a>#}
                    {#</li>#}
                </ul>
            </div>
        </nav>
    </div>
</div>

{% block body %}



{% endblock %}

{% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    {#JS Pour Leaflet#}
    <script src="https://unpkg.com/leaflet@1.4.0/dist/leaflet.js"
            integrity="sha512-QVftwZFqvtRNi0ZyCtsznlKSWOStnDORoefr1enyq5mVL4tmKB3S/EnC3rRJcxCPavG10IcrVGSmPh6Qw5lwrg=="
            crossorigin=""></script>
{% endblock %}

</body>

</html>
