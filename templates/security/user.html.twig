{% extends 'base-navbar.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/admin.css') }}">
{% endblock %}

{% block title %}Profile{% endblock %}

{% block body %}

    <div class="container-fluid" id="idLOGIN">
        <container>
            <div class="row flashDiv">
                <div class="col-2 mx-auto">
                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label }} text-center">{{ message}}</div>
                        {% endfor %}
                    {% endfor %}
                </div>
            </div>
            <div class="row" id="contentManageUser">
                <div class="col-12">
                    <div class="form-group col-6 col-md-3 mt-5 mx-auto">
                        <article id="userDescription" class="text-white">
                            <strong>Nom d'utilisateur :</strong> {{ moi.username }}<br>
                            <strong>Email :</strong> {{ moi.email }}<br>
                            <strong>Avatar :</strong> <img src="{{ asset('uploads/user/avatar/' ~ moi.avatar) }}" alt="avateur de l'utilisateur"><br>
                            <div class="col-12 d-flex mt-5">
                                <a href="{{ path('changePassword') }}">
                                    <button class="btn btn-warning">Changer votre mdp</button>
                                </a>
                            </div>
                            <div class="col-12 d-flex mt-5">
                                <a href="{{ path('deleteUser', {id : moi.id}) }}">
                                    <button id="deleteUser" class="btn btn-danger">Supprimer votre compte</button>
                                </a>
                            </div>
                        </article>
                    </div>
                </div>
            </div>
            <div id="results" class="col-6 col-md-3 mt-5 mx-auto">
            </div>
        </container>
    </div>
    <div id="results"></div>
{% endblock %}