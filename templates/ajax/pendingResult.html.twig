
<article id="addressDescription">
    <strong>Nom :</strong> {{ address.name }}<br>
    <strong>ID :</strong> {{ address.id }}<br>
    <strong>Categorie :</strong> {{ address.subCategory.category.label }}<br>
    <strong>Sous-Categorie :</strong> {{ address.subCategory.label }}<br>
    <strong>Adresse :</strong> {{ address.location }}<br>
    <strong>Coordoonées géographiques :</strong> {{ address.coordinates }}<br>
    <strong>Tel :</strong> {{ address.tel }}<br>
    <strong>Site internet :</strong> {{ address.website }}<br>
    <strong>Réduction :</strong> {{ address.discount }}<br>
    <strong>Statut :</strong> {{ address.status }}<br>
    <div class="col-12 d-flex justify-content-around mt-5">
            <button id="accept" class="btn btn-success">Valider</button>
            <button id="modify" class="btn btn-warning">Modifier</button>
            <button id="deny" class="btn btn-danger">Refuser</button>
    </div>
</article>
